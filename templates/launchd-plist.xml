<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.para-bootstrap.claude-pipeline</string>

    <key>StartInterval</key>
    <integer>{{SCHEDULE_INTERVAL}}</integer>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>{{BIN_DIR}}/claude-para-pipeline.sh</string>
    </array>

    <key>RunAtLoad</key>
    <false/>

    <key>StandardOutPath</key>
    <string>{{PARA_ROOT}}/logs/claude-reflection.stdout.log</string>

    <key>StandardErrorPath</key>
    <string>{{PARA_ROOT}}/logs/claude-reflection.stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin:{{HOME}}/.bun/bin:{{HOME}}/.local/bin</string>
        <key>HOME</key>
        <string>{{HOME}}</string>
    </dict>
</dict>
</plist>
